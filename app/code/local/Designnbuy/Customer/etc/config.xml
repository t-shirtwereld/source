<config>
	<modules>
		<Designnbuy_Customer>
			<version>0.3.3</version>
		</Designnbuy_Customer>
	</modules>
	<global>
		<rewrite>
			<designnbuy_customer_account>
			  <from><![CDATA[#^/account/#]]></from>
			  <to>/customer/account/</to>
			</designnbuy_customer_account>
		</rewrite>
	</global>
    
    
    <frontend>
       <routers>
        <designnbuy_customer>
        <use>standard</use>
         <args>
          <module>Designnbuy_Customer</module>
          <frontName>customer</frontName>
         </args>
        </designnbuy_customer>
       </routers>
    </frontend>
    
</config>
